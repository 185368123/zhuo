<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="#f76243"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl_left_setcity"
            android:layout_width="50dip"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/ease_mm_title_back" />
        </RelativeLayout>

        <TextView
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:id="@+id/tv_setcity_title"
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </RelativeLayout>

    <!--搜索框-->
    <EditText
        android:id="@+id/et_search_setcity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="输入城市名称" />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <se.emilsjolander.stickylistheaders.StickyListHeadersListView
            android:id="@+id/stickyList_setcity"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.hyphenate.chatuidemo.widget.SlidingLetter
            android:id="@+id/slidingLetter_setcity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:padding="5dp" />

        <TextView
            android:id="@+id/tv_letter_setcity"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:background="#88000000"
            android:gravity="center"
            android:textSize="20sp"
            android:visibility="gone" />
    </FrameLayout>
</LinearLayout>
