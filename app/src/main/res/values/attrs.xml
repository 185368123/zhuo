<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--========================= TitleBarLayout =========================-->
    <declare-styleable name="TitleBarLayout">
        <!-- 标题内容 -->
        <attr name="title_bar_left_text" format="string" />
        <attr name="title_bar_title" format="string" />
        <attr name="title_bar_right_text" format="string" />

        <!-- 字体大小 -->
        <attr name="title_bar_left_text_size" format="dimension" />
        <attr name="title_bar_text_size" format="dimension" />
        <attr name="title_bar_right_text_size" format="dimension" />

        <!-- 字体颜色 -->
        <attr name="title_bar_left_text_color" format="color" />
        <attr name="title_bar_text_color" format="color" />
        <attr name="title_bar_right_text_color" format="color" />

        <!-- 整个标题栏的背景 -->
        <attr name="title_bar_background" format="reference|color" />

        <!-- 左右两边的 LinearLayout 是否显示 -->
        <attr name="title_bar_left_linear_visibility" format="enum">
            <enum name="visible" value="0" />
            <enum name="invisible" value="1" />
            <enum name="gone" value="2" />
        </attr>
        <attr name="title_bar_right_linear_visibility" format="enum">
            <enum name="visible" value="0" />
            <enum name="invisible" value="1" />
            <enum name="gone" value="2" />
        </attr>

        <!-- 左右两边的 TextView 是否显示 -->
        <attr name="title_bar_left_text_visibility" format="enum">
            <enum name="visible" value="0" />
            <enum name="invisible" value="1" />
        </attr>
        <attr name="title_bar_right_text_visibility" format="enum">
            <enum name="visible" value="0" />
            <enum name="invisible" value="1" />
        </attr>


        <!-- 标题左右 ImageView 两边显示的图片 -->
        <attr name="title_bar_left_image_src" format="reference" />
        <attr name="title_bar_right_image_src" format="reference" />

        <!-- 两个 TextView 的背景 -->
        <attr name="title_bar_left_text_background" format="reference|color" />
        <attr name="title_bar_right_text_background" format="reference|color" />

        <!-- 标题左右 LinearLayout 两边显示的背景颜色 -->
        <attr name="title_bar_left_linear_background" format="reference|color" />
        <attr name="title_bar_right_linear_background" format="reference|color" />
    </declare-styleable>

    <!--========================= ColorSwitchCompat =========================-->
    <declare-styleable name="ColorSwitchCompat">
        <attr name="toggleOnColor" format="color" />
        <attr name="toggleOffColor" format="color" />
        <attr name="bgOnColor" format="color" />
        <attr name="bgOffColor" format="color" />
    </declare-styleable>

    <!--========================= StickyListView =========================-->
    <declare-styleable name="StickyListView">
        <attr name="stickyListHeadersStyle" format="reference" />
        <attr name="android:clipToPadding" />
        <attr name="android:scrollbars" />
        <attr name="android:overScrollMode" />
        <attr name="android:padding" />
        <attr name="android:paddingLeft" />
        <attr name="android:paddingTop" />
        <attr name="android:paddingRight" />
        <attr name="android:paddingBottom" />
        <attr name="android:fadingEdgeLength" />
        <attr name="android:requiresFadingEdge" />
        <attr name="android:cacheColorHint" />
        <attr name="android:choiceMode" />
        <attr name="android:drawSelectorOnTop" />
        <attr name="android:fastScrollEnabled" />
        <attr name="android:fastScrollAlwaysVisible" />
        <attr name="android:listSelector" />
        <attr name="android:scrollingCache" />
        <attr name="android:scrollbarStyle" />
        <attr name="android:divider" />
        <attr name="android:dividerHeight" />
        <attr name="android:transcriptMode" />
        <attr name="android:stackFromBottom" />
        <attr name="hasStickyHeaders" format="boolean" />
        <attr name="isDrawingListUnderStickyHeader" format="boolean" />
    </declare-styleable>

    <declare-styleable name="CircularImage">
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
    </declare-styleable>

    <declare-styleable name="FlowLayout">
        <attr name="width_space" format="dimension"/>
        <attr name="height_space" format="dimension"/>
    </declare-styleable>
</resources>