<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="button_style" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/gray_selector1</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="button_style2" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textSize">@dimen/text_size_20</item>
        <item name="android:background">@drawable/gray_selector1</item>
        <item name="android:textColor">@color/app_white</item>
    </style>
    <!--LoginActivity-->
    <style name="login_edit_style1">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/main_color2</item>
        <item name="android:textColorHint">@color/login_color2</item>
        <item name="android:background">@null</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="login_edit_style2">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/main_color2</item>
        <item name="android:background">@null</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="login_button_style1" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_45</item>
        <item name="android:background">@drawable/button_selector</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <!--InviteActivity-->
    <style name="invite_button_style">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/invite_button_white_shape</item>
    </style>
    <!--MineFragment-->
    <style name="mine_text_style1" >
        <item name="android:textSize">@dimen/text_size_18</item>
        <item name="android:textColor">@color/app_black</item>
    </style>

    <!-- Dialog Style -->
    <style name="progress_dialog_style1" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- 按钮的颜色,进度对话框时，是进度条的颜色 -->
        <item name="colorAccent">@color/my_color2</item>
        <!-- 背景颜色 -->
        <item name="android:background">@color/white</item>
        <!-- 字体颜色 -->
        <item name="android:textColor">@color/app_black</item>
    </style>


    <style name="progress_dialog_style3" parent="progress_dialog_style1">
        <!--设置对话框显示时 Activity 是透明的-->
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="alert_dialog_style1" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- 按钮的颜色,进度对话框时，是进度条的颜色 -->
        <item name="colorAccent">@color/black</item>
        <!-- 标题，字体的颜色 -->
        <item name="android:textColorPrimary">@color/black</item>
        <!-- 背景的颜色 -->
        <item name="android:background">@color/white</item>
        <!-- 标题颜色 -->
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
