<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_share_video_play"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="zhuozhuo.com.zhuo.view.activity.ShareVideoPlayActivity">

    <zhuozhuo.com.zhuo.view.Video.LandLayoutVideo
        android:id="@+id/detail_player"
        android:layout_width="match_parent"
        android:layout_height="300dp" />
    <RelativeLayout
        android:layout_gravity="center"
        android:paddingTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/linear"
            android:orientation="horizontal"
            android:background="@color/black"
            android:visibility="gone"
            android:gravity="center"
            android:layout_toLeftOf="@+id/button_detile">
            <Button
                android:paddingLeft="5dp"
                android:gravity="center"
                android:id="@+id/button_love"
                android:layout_width="35dp"
                android:layout_height="25dp"
                android:background="@drawable/qqunlove"/>
            <TextView
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:textColor="@color/white"
                android:text="赞"
                android:gravity="center"/>
            <Button
                android:background="@drawable/remark"
                android:gravity="right"
                android:id="@+id/button_remart"
                android:layout_width="40dp"
                android:layout_height="30dp"
                />
            <TextView
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:textColor="@color/white"
                android:text="评论"
                android:gravity="center"/>
        </LinearLayout>
        <Button
            android:id="@+id/button_detile"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/leftfetail"
            android:paddingTop="10dp" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/zan_ll"
        android:visibility="gone"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/zan"/>
        <TextView
            android:id="@+id/tv_zan"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="点赞的人"
            android:textColor="@color/black"
            />
    </LinearLayout>
    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:id="@+id/lv_comment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="#00000000"
        android:divider="#19000000"
        android:dividerHeight="1dp"
        android:fadingEdge="none"
        android:fastScrollEnabled="false"
        android:footerDividersEnabled="false"
        android:headerDividersEnabled="false"
        android:paddingLeft="10dp"></com.handmark.pulltorefresh.library.PullToRefreshListView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
</LinearLayout>
